
// colors
$Color-Border:#cccccc;
$Color-black: #0000;
$Color-white: #ffffff;
$Head-hight: 56px;


/* FONTS IMPORT */

@font-face {
  font-family: 'DM Serif Display';
  src: url('DMSerifDisplay-Regular.eot');
  src: url('DMSerifDisplay-Regular.eot?#iefix') format('embedded-opentype'),
      url('DMSerifDisplay-Regular.woff2') format('woff2'),
      url('DMSerifDisplay-Regular.woff') format('woff'),
      url('DMSerifDisplay-Regular.ttf') format('truetype'),
      url('DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
/* END FONTS IMPORT  */

  // body

  body{
  font-size: 16px;
  line-height: 24px;
  color: $Color-black;
  background: $Color-white;
  }

/* headings */
h1,h2,h3,h4,h5,h6{
  font-style: normal;
  font-weight: bold;
  margin: 0 0 16px 0;
  padding: 0;

}

h1{
  
  font-size: 32px;
  line-height: 40px;
}

h2{
  font-size: 24px;
  line-height: 32px;
  

}

h3{  
  font-size: 16px;
  line-height: 24px;
}

h4,h5,h6{
  font-size: 16px;
  line-height: 16px;
  
}
h1-serif
.h2-seirif,
.h3-seirif,
.h4-seirif,
.h5-seirif,
.h6-seirif{
  font-family: 'DM Serif Display';
  font-weight: normal;
}

.heading-uppercase{
  font-weight: bold;
  letter-spacing: 0.1rem;
  text-transform: uppercase;
}

  h1.heading-uppercase h1 {
    font-size: 24px;
    line-height: 32px;

      }
  h2.heading-uppercase h2 {
    font-size: 16px;
    line-height: 24px;

      }
    .heading-uppercase-small{
      font-weight: bold;
      font-size: 12px;
      line-height: 16PX;
      letter-spacing: 0.1rem;
      text-transform: uppercase;

      }
/* end heading   */
      p{
      font-size: 16px;
      line-height: 24px;
      margin-bottom: 16px;
      }
      .crossed-text{
        font-size: 16px;
        line-height: 24px;
        color: $Color-Border;
        text-decoration-line: line-through;
      }

 // mini text
    .mini-text{
      font-size: 12px;
      line-height: 16px;
      text-transform: lowercase;
    }
    .mini-text-uppercase{
      font-size: 12px;
      line-height: 24px;
      text-transform: uppercase;
     }
  // end of minitext

    button,
    .btn{
      height: 48px;
      background: $Color-black;
      padding: 12px 20px;
      color: $Color-white;
      font-size: 14px;
      line-height: 24px;
      text-transform: uppercase;
      font-weight: normal;
      border: 0;
      border-radius: 0;

      .site-header{
        height: $Head-hight;
        position: fixed;
        width: 100%;
        z-index: 999;
        padding: 8px 20px 8px 20px;
    
        }
        .site-header-icon{
          padding: 0;

            }
